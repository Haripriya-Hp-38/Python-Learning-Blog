import matplotlib.pyplot as plt
x = input("Enter X values (comma separated): ").split(',')
y = input("Enter Y values (comma separated): ").split(',')
x = [i.strip() for i in x]
y = [float(i) for i in y]

print("\nSelect chart type:")
print("1. Line Chart")
print("2. Bar Chart")
print("3. Pie Chart")

choice = int(input("Enter your choice (1-3): "))
if choice == 1:
    plt.plot(x, y, marker='o', color='blue')
    plt.title("Line Chart")
    plt.xlabel("X Values")
    plt.ylabel("Y Values")

elif choice == 2:
    plt.bar(x, y, color='orange')
    plt.title("Bar Chart")
    plt.xlabel("X Values")
    plt.ylabel("Y Values")

elif choice == 3:
    plt.pie(y, labels=x, autopct='%1.1f%%')
    plt.title("Pie Chart")

else:
    print("Invalid choice!")

plt.show()
